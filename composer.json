{
    "name": "veda/joom",
    "description": "a simple php client for joom merchant api",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ketu.lai",
            "email": "ketu.lai@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.0",
        "guzzlehttp/guzzle": "^6.2",
        "veda/utils": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Veda\\Joom\\": "src/Veda/Joom"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Veda\\Joom\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
